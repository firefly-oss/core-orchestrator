<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.catalis</groupId>
        <artifactId>lib-parent-pom</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <groupId>com.core.orchestrator</groupId>
    <artifactId>core-orchestrator</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>Core Orchestrator</name>
    <description>Core Camunda Orchestrator</description>

    <properties>
        <java.version>21</java.version>
        <zeebe.version>8.7.1</zeebe.version>
        <spring-zeebe.version>8.3.0</spring-zeebe.version>

        <lib-baas-treezor-impl>1.0.0-SNAPSHOT</lib-baas-treezor-impl>
        <common-platform-config-mgmt.version>1.0.0-SNAPSHOT</common-platform-config-mgmt.version>
        <lib-common-r2dbc.version>1.0.0-SNAPSHOT</lib-common-r2dbc.version>
        <lib-common-core.version>1.0.0-SNAPSHOT</lib-common-core.version>

    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>lib-common-core</artifactId>
            <version>${lib-common-core.version}</version>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>common-platform-sca-mgmt-sdk</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>common-platform-config-mgmt-sdk</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>common-platform-notification-services-sdk</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>lib-baas-treezor-impl</artifactId>
            <version>${lib-baas-treezor-impl}</version>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>lib-common-r2dbc</artifactId>
            <version>${lib-common-r2dbc.version}</version>
        </dependency>

        <dependency>
            <groupId>com.catalis</groupId>
            <artifactId>common-platform-config-mgmt-interfaces</artifactId>
            <version>${common-platform-config-mgmt.version}</version>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>io.projectreactor</groupId>
            <artifactId>reactor-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Camunda 8 Dependencies -->
        <dependency>
            <groupId>io.camunda</groupId>
            <artifactId>spring-zeebe-starter</artifactId>
            <version>8.5.18</version>
        </dependency>

        <!-- Lombok -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- H2 Database -->
        <dependency>
            <groupId>io.r2dbc</groupId>
            <artifactId>r2dbc-h2</artifactId>
            <scope>runtime</scope>
        </dependency>



    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
